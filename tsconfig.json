{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["es2022"],
    "jsx": "react-jsx",
    "types": ["@cloudflare/workers-types", "vitest/globals", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "build"]
}